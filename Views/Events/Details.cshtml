@model EventRegistrationPortal.Models.Event

@{
    ViewData["Title"] = "Event Details";
}

<div class="container mt-5 text-light">
    <h2 class="text-center mb-4">Event Details</h2>

    <div class="card bg-dark text-light shadow p-4">
        <dl class="row">
            <dt class="col-sm-3">Title</dt>
            <dd class="col-sm-9">@Model.Title</dd>

            <dt class="col-sm-3">Date</dt>
            <dd class="col-sm-9">@Model.Date.ToString("dd MMM yyyy")</dd>

            <dt class="col-sm-3">Location</dt>
            <dd class="col-sm-9">@Model.Location</dd>

            <dt class="col-sm-3">Description</dt>
            <dd class="col-sm-9">@Model.Description</dd>
        </dl>
    </div>

    <div class="mt-4 text-center">
        <a asp-action="Index" class="btn btn-secondary">Back to Events</a>
    </div>
</div>
